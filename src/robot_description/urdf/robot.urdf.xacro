<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <xacro:property name="PI" value="3.14159"/>
    <xacro:property name="VELOCITY" value="10.0"/>
    <xacro:property name="EFFORT" value="30.0"/>
    <xacro:property name="FILE_PATH" value="file://$(find robot_description)/meshes"/>
    <!-- Links -->
    <link name="world"/>

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
            <geometry>
                <mesh filename="${FILE_PATH}/basement.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
            <geometry>
                <mesh filename="${FILE_PATH}/basement.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <link name="base_plate">
        <visual>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
            <geometry>
                <mesh filename="${FILE_PATH}/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
            <geometry>
                <mesh filename="${FILE_PATH}/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>
   
    <!-- Joints -->  
    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> 

    <joint name="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link="base_plate"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0.307" rpy="0 0 0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${EFFORT}" velocity="${VELOCITY}"/>
    </joint>

    <link name="forward_drive_arm">
        <visual>
            <origin rpy="0 -${PI/2} ${PI/2}" xyz="0.19 0.06 -0.08"/>
            <geometry>
                <mesh filename="${FILE_PATH}/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>    
        </visual>
        <collision>
            <origin rpy="0 -${PI/2} ${PI/2}" xyz="0.19 0.06 -0.08"/>
            <geometry>
                <mesh filename="${FILE_PATH}/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry> 
        </collision>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="base_plate"/>
        <child link="forward_drive_arm"/>
        <axis xyz="1 0 0"/>
        <origin xyz="-0.02 0 0.35" rpy="0 0 0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${EFFORT}" velocity="${VELOCITY}"/>
    </joint>

    <link name="horizontal_arm">
        <visual>
            <origin rpy="${PI/2} 0 ${PI/2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="${FILE_PATH}/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="${PI/2} 0 ${PI/2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="${FILE_PATH}/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="forward_drive_arm"/>
        <child link="horizontal_arm"/>
        <axis xyz="1 0 0"/>
        <origin rpy="0 0 0" xyz="0 0 0.8"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${EFFORT}" velocity="${VELOCITY}"/>
    </joint>

    <link name="claw_support">
        <visual>
            <origin rpy="0 0 ${PI/2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="${FILE_PATH}/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 ${PI/2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="${FILE_PATH}/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="horizontal_arm_to_claw_support" type="fixed">
        <parent link="horizontal_arm"/>
        <child link="claw_support"/>
        <origin rpy="0 0 0" xyz="0 0.82 0"/>
    </joint>

    <link name="gripper_right">
        <visual>
            <origin rpy="0 0 -${PI/2}" xyz="-0.1 0.5 -0.1"/>
            <geometry>
                <mesh filename="${FILE_PATH}/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
             <origin rpy="0 0 -${PI/2}" xyz="-0.1 0.5 -0.1"/>
            <geometry>
                <mesh filename="${FILE_PATH}/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <link name="gripper_left">
        <visual>
            <origin rpy="0 0 -${PI/2}" xyz="-0.04 0.5 -0.1"/>
            <geometry>
                <mesh filename="${FILE_PATH}/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 -${PI/2}" xyz="-0.04 0.5 -0.1"/>
            <geometry>
                <mesh filename="${FILE_PATH}/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_4" type="revolute">
        <parent link="claw_support"/>
        <child link="gripper_right"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="-0.04 0.13 -0.1"/>
        <limit lower="-${PI/2}" upper="0.0" effort="${EFFORT}" velocity="${VELOCITY}"/>
    </joint>

    <joint name="joint_5" type="revolute">
        <parent link="claw_support"/>
        <child link="gripper_left"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="-0.22 0.13 -0.1"/>
        <mimic joint="joint_4" multiplier="-1"/>
        <limit lower="0.0" upper="${PI/2}" effort="${EFFORT}" velocity="${VELOCITY}"/>
    </joint>
</robot>